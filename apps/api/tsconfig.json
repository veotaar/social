{
  "extends": "@repo/config/typescript/base.json",
  "compilerOptions": {
    "jsx": "react",
    // "target": "ES2021",
    "module": "ESNEXT",
    "moduleResolution": "bundler",
    "noEmit": true,
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@web/*": ["../web/src/*"],
      "@web/dist/*": ["../web/dist/*"],
      "@api": ["src/index.ts"],
      "@api/*": ["src/*"]
    }
  }
}
